<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recommendationTitle"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:fontFamily="@font/alex_brush"
        android:text="City of Urdaneta"
        android:textColor="#FFB6C1 "
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category1Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFC0CB"
            android:strokeColor="#FFB6C1"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:shadowColor="#FF69B4"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:text="Hotels"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/category2Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFC0CB"
            android:strokeColor="#FFB6C1"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:shadowColor="#FF69B4"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:text="Restaurant"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/category3Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFC0CB"
            android:strokeColor="#FFB6C1"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:shadowColor="#FF69B4"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:text="Grocery Centers"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />


    </LinearLayout>
</LinearLayout>
